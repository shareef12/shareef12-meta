#!/bin/sh
# postinst script for package
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package

configure_sharef12_desktop()
{
    # Update all packages
    apt-get update && apt-get dist-upgrade
    apt-get autoremove --purge

    # Upgrade pip
    python -m pip install -U pip setuptools wheel
    python3 -m pip install -U pip setuptools wheel

    # Install python packages
    python -m pip install -U pwntools requests virtualenv
    python3 -m pip install -U requests virtualenv

    # Install linting/testing packages
    python -m pip install -U doc8 flake8 mypy pylint pytest tox
    python3 -m pip install -U doc8 flake8 mypy pylint pytest tox

    # Create home directories for new users with 0755 permissions
    sed -i -e 's/DIR_MODE=0755/DIR_MODE=0750/' /etc/adduser.conf
}

case "$1" in
    configure)
        configure_shareef12_desktop
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
        exit 0
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
